@model PodLynk.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

<div class="otherwrapper">

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

     <div>
                    @Html.LabelFor(m => m.UserName, new { @class = "loginLabel" }) 
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "required1" })          
                    @Html.TextBoxFor(m => m.UserName, new { @autofocus = "autofocus", @class = "form-control", @placeholder = "E-mail Address" })
                              
                </div>
    <div>
                    @Html.LabelFor(m => m.Password, new { @class = "loginLabel" }) 
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "required1" })       
                    @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", @class = "form-control" })  
                               
                </div>
    <div>
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "loginLabel" }) 
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "required1" })       
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Password", @class = "form-control" })  
                               
                </div>
       <div class="align_center">
        <input type="submit" class="button Otherbtn" value="Register" />
 </div>
}
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
