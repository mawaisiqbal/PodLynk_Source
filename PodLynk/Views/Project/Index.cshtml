@model IEnumerable<PodLynk.Models.Projects> 
@{
    ViewBag.Title = "Projects";
    //Layout = null;
    Layout = "~/Views/Shared/_ProjectLayoutPage.cshtml";
}

 

    <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>

<script src="https://cdn.rawgit.com/nnattawat/flip/v1.0.18/dist/jquery.flip.min.js"></script>
<script src="https://cdn.datatables.net/1.10.10/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.10/js/dataTables.bootstrap.min.js"></script>
<script src="~/Scripts/Project.js"></script>




<div class="container">
    <div class="LeftText">
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vel iaculis felis. Nullam vitae dui in enim feugiat congue vitae sit amet orci. Morbi ultrices dolor non ipsum gravida, ac aliquet ipsum venenatis. In blandit consequat ligula sit amet elementum.</p>
        </div>
<div class="RightText">

@Html.ActionLink("Add New Project", "Create", "Project", new { ProjectID = 0 }, new { @class="button CreateBtn"})</div>


    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Title</th>
                <th>Created At</th>
                <th>Updated At</th>
            </tr>
        </thead>
        <tbody>
        @foreach(var mod in Model)
        {
            <tr>
                <td>@mod.ProjectTitle</td>
                <td>@mod.CreatedAt.ToShortDateString()
                </td>
                <td>@mod.UpdatedAt.ToShortDateString()</td>
                </tr>
        }
        </tbody>
        </table>

</div>
