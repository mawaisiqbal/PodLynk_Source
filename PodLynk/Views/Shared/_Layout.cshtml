<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - PodLynk</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <link href="~/Content/style.css" rel="stylesheet" type="text/css" />
        
        <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
    </head>
    <body class="body_background">
        @if(Request.IsAuthenticated){

      <div class="card_back">
            <div class="content-wrapper container" >
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("PODLYNK", "Index", "Home")</p>
                    <span class="WelComeText">Welcome to PodyLynk</span>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                 
                </div>
            </div>
        </div>
        }
        <div id="body">
           
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
                <a class="feedback" href="#"><img src="~/Content/images/feedback.png"/></a>
            </section>
        </div>
      <script type="text/javascript">
        $(function() {
            
            var userAuthorized = @User.Identity.IsAuthenticated.ToString().ToLower();
            if(!userAuthorized)
            {
                $(".wrapper1").css("margin-top","80px");
                $(".otherwrapper").css("margin-top","80px");
            }
        });
     
       
</script>
        @RenderSection("scripts", required: false)
    </body>
</html>
